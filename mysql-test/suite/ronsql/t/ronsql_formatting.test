--echo Formatting float
let QUERY=
SELECT cfloat
     , count(cfloat)
FROM api_scan
WHERE sint24 = 0 and (sint8 = 0 or sint8 = 1)
GROUP BY cfloat;|
--source suite/ronsql/include/ronsql_compare.inc

--echo Formatting int16
let QUERY=
SELECT sint16
     , count(sint16)
FROM api_scan
GROUP BY sint16;|
--source suite/ronsql/include/ronsql_compare.inc
#WHERE sint24 = 0 and (sint8 = 0 or sint8 = 1)

--echo Avg signed int16
# Todo fix, after NdbAggregator improves temporary everything-is-double solution
let QUERY=
SELECT cchar as char_gr
     , sum(sint16)
     , count(sint16)
     , avg(sint16)
FROM api_scan
GROUP BY cchar;|
--source suite/ronsql/include/ronsql_compare.inc

--echo Avg unsigned int16
# Todo fix, after NdbAggregator improves temporary everything-is-double solution
let QUERY=
SELECT cchar as char_gr
     , sum(uint16)
     , count(uint16)
     , avg(uint16)
FROM api_scan
GROUP BY cchar;|
--source suite/ronsql/include/ronsql_compare.inc

--echo Avg float
let QUERY=
