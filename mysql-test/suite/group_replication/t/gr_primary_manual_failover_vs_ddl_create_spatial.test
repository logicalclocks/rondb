--echo #
--echo # WL#15752: Add more DDL statements to transaction tracking facility
--echo #

# https://dev.mysql.com/doc/refman/8.0/en/sql-data-definition-statements.html

#############################################################
# Validate that `group_replication_set_as_primary()` does   #
# wait for ongoing DDL to complete before actually changing #
# the primary.                                              #
#############################################################

--let $ddl_preparation_statement=
--let $ddl_statement= CREATE SPATIAL REFERENCE SYSTEM 1000000000 NAME 'foo' DEFINITION 'GEOGCS["WGS 84",DATUM["World Geodetic System 1984",SPHEROID["WGS 84",6378137,298.257223563,AUTHORITY["EPSG","7030"]],AUTHORITY["EPSG","6326"]],PRIMEM["Greenwich",0,AUTHORITY["EPSG","8901"]],UNIT["degree",0.017453292519943278,AUTHORITY["EPSG","9122"]],AXIS["Lat",NORTH],AXIS["Lon",EAST],AUTHORITY["EPSG","4326"]]'
--let $ddl_cleanup_statement= DROP SPATIAL REFERENCE SYSTEM 1000000000
--source ../include/gr_primary_manual_failover_vs_ddl.inc
